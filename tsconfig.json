{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "noEmitHelpers": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "exclude": [
        "src",
        "node_modules",
        "platforms"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
